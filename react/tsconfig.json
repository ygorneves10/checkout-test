{
  "compilerOptions": {
    "types": ["node", "jquery"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2017",
    "skipLibCheck": true,
    "strict": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": [
    "./**/*.tsx",
    "./**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
